{
    "server": {
        "port": 8081,
        "read_timeout": 5,
        "write_timeout": 30
    },
    "statsd": {
      "enabled": false
    },
    "sources": {
        "default": {
            "type": "http",
            "host": "myhostname.com"
        }
    },
    "processors": {
        "default": {
            "image_compression_quality": 85,
            "default_scale_mode": "aspect_fill",
            "max_blur_radius_percentage": 0,
            "max_image_height": 0,
            "max_image_width": 1000
        }
    },
    "routes": {
        "(?P<image_path>/.*)": {
            "name": "images",
            "source" :"default",
            "processor": "default"
        }
    }
}
